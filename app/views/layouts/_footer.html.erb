<footer id="footer" class="color-div">
  <div class="container">
    <div class="row">
      <div class="col-sm-3">
        <div class="widget">
          <h4 class="widget-title"><%= t "layouts.footer.instagram"%></h4>
          <div id="beta-instagram-feed"><div></div></div>
        </div>
      </div>
      <div class="col-sm-2">
        <div class="widget">
          <h4 class="widget-title"><%= t "layouts.footer.information"%></h4>
          <div>
            <ul>
              <li><a href="#"><i class="fa fa-chevron-right"></i><%= t "layouts.footer.web_design" %></a></li>
              <li><a href="#"><i class="fa fa-chevron-right"></i><%= t "layouts.footer.web_development" %></a></li>
              <li><a href="#"><i class="fa fa-chevron-right"></i><%= t "layouts.footer.marketing" %></a></li>
              <li><a href="#"><i class="fa fa-chevron-right"></i><%= t "layouts.footer.tips" %></a></li>
              <li><a href="#"><i class="fa fa-chevron-right"></i><%= t "layouts.footer.resources" %></a></li>
              <li><a href="#"><i class="fa fa-chevron-right"></i><%= t "layouts.footer.illustrations" %></a></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-sm-4">
       <div class="col-sm-10">
        <div class="widget">
          <h4 class="widget-title"><%= t "layouts.footer.contact" %></h4>
          <div>
            <div class="contact-info">
              <i class="fa fa-map-marker"></i>
              <p><%= t "layouts.footer.address" %></p>
              <p><%= t "layouts.footer.content" %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="widget">
        <h4 class="widget-title"><%= t "layouts.footer.newsletter" %></h4>
        <form action="#" method="post">
          <input type="email" name="your_email">
          <button class="pull-right" type="submit"><%= t "layouts.footer.subscribe"%> <i class="fa fa-chevron-right"></i></button>
        </form>
      </div>
    </div>
  </div> <!-- .row -->
</div> <!-- .container -->
<script src="http://netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
<div class="copyright">
  <div class="container">
    <p class="pull-left"><%= t "layouts.footer.privacy" %></p>
    <div class="clearfix"></div>
  </div> <!-- .container -->
</div> <!-- .copyright -->
</footer> <!-- #footer -->
