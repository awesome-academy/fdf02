<header id="header">
  <div class="header-top">
    <div class="container">
      <div class="pull-left auto-width-left">
        <ul class="top-menu menu-beta l-inline">
          <li><a href=""><i class="fa fa-home"></i><%= t "layouts.header.address" %></a></li>
          <li><a href=""><i class="fa fa-phone"></i> <%= t "layouts.header.phone" %></a></li>
        </ul>
      </div>
      <div class="pull-right auto-width-right">
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
          <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i>
           <%= t "layouts.header.profile" %><b class="caret"></b>
          </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.header.profile"), current_user %></li>
              <li><%= link_to t("layouts.header.history"), orders_show_path %></li>
              <li><%= link_to t("layouts.header.suggest"), suggests_show_path %></li>
              <li class="divider"></li>
            </ul>
         </li>
           <li><%= link_to t("layouts.header.log_out"), logout_path, method: :delete %></li>
          <% else %>
            <li><a href="#"><%= t "layouts.header.sign_up" %></a></li>
            <li><%= link_to t("layouts.header.log_in"), login_path %></li>
         <% end %>
        </ul>
      </div>
      <div class="clearfix"></div>
    </div> <!-- .container -->
  </div> <!-- .header-top -->
  <div class="header-body">
    <div class="container beta-relative">
      <div class="pull-left">
        <%= link_to image_tag("logo-cake.png", alt: "logo", id: "logo"), "#" %>
      </div>
      <div class="pull-right beta-components space-left ov">
        <div class="space10">&nbsp;</div>
        <!-- cart -->
        <div class="beta-comp">
         <div class="cart_mini_top dropdown pt15">
            <% if @cart_products %>
              <%= render "carts/cart_mini", cart_products: @cart_products %>
            <% end %>
        </div>
      </div>
      <!-- .end- cart -->
        <div class="beta-comp">
          <form role="search" method="get" id="searchform" action="/products">
            <input type="text" value="" name="name_product" id="s" placeholder="Nhập từ khóa..." />
            <button class="fa fa-search" type="submit" id="searchsubmit"></button>
          </form>
        </div>
      </div>
      <div class="clearfix"></div>
    </div> <!-- .container -->
  </div> <!-- .header-body -->
  <div class="header-bottom" style="background-color: #0277b8;">
    <div class="container">
      <a class="visible-xs beta-menu-toggle pull-right" href="#"><span class='beta-menu-toggle-text'><%= t "layouts.header.menu" %></span> <i class="fa fa-bars"></i></a>
      <div class="visible-xs clearfix"></div>
      <nav class="main-menu">
        <ul class="l-inline ov">
          <li><%= link_to t("layouts.header.home"), root_path %></li>
          <li><a href="/products"><%= t "layouts.header.product" %></a></li>
          <li><a href="/about"><%= t "layouts.header.introduce" %></a></li>
          <li><a href="/new_suggests"><%= t "layouts.header.suggest" %></a></li>
        </ul>
        <div class="clearfix"></div>
      </nav>
    </div> <!-- .container -->
  </div> <!-- .header-bottom -->
</header> <!-- #header -->
