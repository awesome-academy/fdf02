<header id="header">
  <div class="header-top">
    <div class="container">
      <div class="pull-left auto-width-left">
        <ul class="top-menu menu-beta l-inline">
          <li><a href=""><i class="fa fa-home"></i><%= t "layouts.header.address" %></a></li>
          <li><a href=""><i class="fa fa-phone"></i> <%= t "layouts.header.phone" %></a></li>
        </ul>
      </div>
      <div class="pull-right auto-width-right">
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
          <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i>
           <%= t "layouts.header.profile" %><b class="caret"></b>
          </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.header.profile"), current_user %></li>
              <li><%= link_to t("layouts.header.history"), orders_show_path %></li>
              <li><%= link_to t("layouts.header.suggest"), suggests_show_path %></li>
              <li class="divider"></li>
            </ul>
         </li>
           <li><%= link_to t("layouts.header.log_out"), logout_path, method: :delete %></li>
          <% else %>
            <li><a href="#"><%= t "layouts.header.sign_up" %></a></li>
            <li><%= link_to t("layouts.header.log_in"), login_path %></li>
         <% end %>
        </ul>
      </div>
      <div class="clearfix"></div>
    </div> <!-- .container -->
  </div> <!-- .header-top -->
  <div class="header-body">
    <div class="container beta-relative">
      <div class="pull-left">
        <%= link_to image_tag("logo-cake.png", alt: "logo", :class => "style_image"), "#" %>
      </div>
      <div class="pull-right beta-components space-left ov">
        <div class="space10">&nbsp;</div>
        <div class="beta-comp">
         <div class="dropdown pt15">
          <a href= "#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> <span class="glyphicon glyphicon-shopping-cart"></span> Items<span class="caret"></span></a>
          <ul id="cart_mini" class="dropdown-menu dropdown-cart" role="menu">
            <% if @cart_products %>
              <% @cart_products.each do |cart_product|  %>
                <%= render partial: "carts/cart_mini", locals: { cart_product: cart_product } %>
              <%end%>
          <% end %>
            <li><%= link_to "View Cart", carts_show_path, class: "text-center" %></li>
           <li class="divider"></li>
          </ul>
        </div>

          <!-- .cart -->
        </div>
        <div class="beta-comp">
          <form role="search" method="get" id="searchform" action="/">
            <input type="text" value="" name="s" id="s" placeholder="Nhập từ khóa..." />
            <button class="fa fa-search" type="submit" id="searchsubmit"></button>
          </form>
        </div>
      </div>
      <div class="clearfix"></div>
    </div> <!-- .container -->
  </div> <!-- .header-body -->
  <div class="header-bottom" style="background-color: #0277b8;">
    <div class="container">
      <a class="visible-xs beta-menu-toggle pull-right" href="#"><span class='beta-menu-toggle-text'><%= t "layouts.header.menu" %></span> <i class="fa fa-bars"></i></a>
      <div class="visible-xs clearfix"></div>
      <nav class="main-menu">
        <ul class="l-inline ov">
          <li><%= link_to t("layouts.header.home"), root_path %></li>
          <li><a href="#"><%= t "layouts.header.product" %></a></li>
          <li><a href="#"><%= t "layouts.header.introduce" %></a></li>
          <li><a href="#"><%= t "layouts.header.contact" %></a></li>
        </ul>
        <div class="clearfix"></div>
      </nav>
    </div> <!-- .container -->
  </div> <!-- .header-bottom -->
</header> <!-- #header -->
