<% provide(:title, t("carts.index.title")) %>
<h1><%= t "carts.index.title" %></h1>
<table id="cart" class="table table-hover table-condensed">
  <thead>
    <tr>
      <th class="display_50"><%= t "carts.index.product" %></th>
      <th class="display_10"><%= t "carts.index.price" %></th>
      <th class="display_10"><%= t "carts.index.quantity" %></th>
      <th class="display_5""></th>
      <th class="display_20" class="text-center"><%= t "carts.index.subtotal" %></th>
      <th class="display_5"></th>
    </tr>
  </thead>
  <tbody id = "cart_list">
    <%= render partial: "cart_product", collection: @cart_products %>
  </tbody>
  <tfoot>
    <tr>
      <td><a href=<%= root_path %> class="btn btn-warning"><i class="fa fa-angle-left"></i>
          <%= t "carts.index.continue" %></a>
      </td>
      <td colspan="2" class="hidden-xs"></td>
      <td colspan="1" class="hidden-xs"></td>
      <td class="hidden-xs text-center"><%= t "carts.index.total"%><strong>
        <%= total_price_order = total_order %></strong>
      </td>
      <td><%= link_to t("carts.index.checkout"), order_details_path(total:total_price_order), method: :POST,
          class: "btn btn-success" %></td>
    </tr>
  </tfoot>
</table>
