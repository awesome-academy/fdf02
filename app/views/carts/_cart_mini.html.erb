 <li>
   <span class="item">
     <span class="item-left">
       <%= image_tag cart_product.images[0].picture, alt: cart_product.name, :class => "img-responsive image_in_carts" %>
       <span class="item-info">
         <span><%= cart_product.name %></span>
         <span><%= cart_product.price %></span>
       </span>
     </span>
     <span class="item-right">
       <%= link_to "<i class='btn btn-xs btn-danger pull-right'>x</i>".html_safe, cart_delete_item_path(product_id: cart_product.id), remote: true, method: :DELETE %>
     </span>
   </span>
 </li>
