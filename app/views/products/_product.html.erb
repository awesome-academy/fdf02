<% products.each do |product|%>
<div class="col-sm-3">
  <div class="single-item">
    <div class="single-item-header">
      <%= image_tag product.images[0].picture.url, alt: product.name, class: "style_image" %>
    </div>
    <div class="single-item-body">
      <p class="single-item-title"><%= product.name %></p>
      <p class="single-item-price">
        <span><%= product.price %></span>
      </p>
    </div>
    <div class="single-item-caption">
      <%= link_to carts_path(product_id: product.id), method: :POST, remote: true, class: "add-to-cart pull-left" do %>
       <i class="fa fa-shopping-cart"></i>
      <% end %>
      <a class="beta-btn primary" href=<%= product_path(id: product.id) %>><%= t "static_pages.home.details"%><i class="fa fa-chevron-right"></i></a>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
<% end %>
