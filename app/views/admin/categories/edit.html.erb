<% provide(:title, t("admin.categories.edit.title")) %>
<div class="row">
  <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 center_div">
    <h1><%= t"admin.categories.edit.title" %></h1>
    <%= form_for [:admin, @category] do |f| %>
      <%= render "error_messages" %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.submit t("admin.categories.edit.button"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
